

<main>


    <div class="main-user-experience">

        <div class="chart-navigation">
            {{!-- pics from google are very tiny --}}
            <div class="user-photo-container">
                <img data-role="profilepic" src='{{pic}}' alt='profile picture'>
            </div>
            <h3>Company Analytics</h3>
             <!-- Map and Google API containers -->
            <div id="view-name"></div> <!-- PropertyName: DigitalCrafts, ViewName: All Web Site Data -->
            <div id="embed-api-auth-container" class="hidden"></div> <!--You are logged in as: google user -->
            <div id="view-selector-container"></div> <!-- Account, Property, View dropdowns -->
            <div id="active-users-container"></div> <!-- Active users -->
            <h3 class="sessions-count">Sessions Count</h3>
            <div id="date-range-selector-container"></div> <!-- Start/End Date selector -->
        </div>
        {{!-- Charts container --}}
        <div class="charts-container">
            <div class="welcome-container">
                <div class="welcome-user">
                    Welcome, {{name}}!
                </div>
                <div class="loggedin-user-info">
                    <div class="company-logo-container">
                        <img class="company-logo" src="../images/digitalcraftslogo.png" alt="company-logo">
                        {{!-- <img class="company-logo" src='{{{companylogo}}}'alt="company-logo"> --}}
                    </div>
                </div>
            </div>

            <div class="all-charts-container">

                <!----------- Main GRAPH ----------->

                <div id="template-container"></div>
                <hr />
                
                <div class="box">
                    <h3>Main Overview</h3>
                    <div id="main-container"></div>
                </div>
                <hr />

                <div class="box">
                    <h3>Traffic Overview</h3>
                    <div id="traffic-container"></div>
                </div>

                <!--- Sessions/Users Graph --->
                <h3> Site Traffic Sessions vs. Users - last 30 days </h3>
                <div id="sessions-users-container"></div> 
                <hr />

                <!--------- Annual Graph --------->
                <div class="Chartjs">
                    <h3>Annual (by users)</h3>
                    <figure class="Chartjs-figure" id="chart-2-container"></figure>
                    <ol class="Chartjs-legend" id="legend-2-container"></ol>
                </div>
            </div>

        </div>
        

        
        <!-- fixed green plus button at bottom right -->
        <div class="add-event-button">
            <img src="../images/plusadd.png" alt="green plus button for adding event" data-type="open-event-popup">
        </div>


        <!-- popup form for adding events -->
        <form class="form" id="submit-event" data-popup="form-container">
            <div class="form-container"> 

                <!-- date -->
                <div class="date">
                    <label for="date">Date: </label>
                    <input name="date" id="date" autocomplete="on" type="date" required>
                </div>

                <!-- describe event box -->
                <div class="describe-event">
                    <textarea data-type="form-description" name= "event-description" rows="10" cols="50" placeholder="Describe your event" required></textarea>
                </div>
                
            
            <!-- icons to choose from -->
                <div class="icon-dropdown" id="myDropdown">
                    <select name="icons">
                        <option class="icon" value="facebook" data-imagesrc="../images/facebook.png" data-description="Facebook Post"></option>
                        <option class="icon" value="twitter" data-imagesrc="../images/twitter.png" data-description="Tweet"></option>
                        <option class="icon" value="gmail" data-imagesrc="../images/gmail.png" data-description="Google Plus post"></option>
                        <option class="icon" value="linkedin" data-imagesrc="../images/linkedin.png" data-description="Linkedin post"></option>
                        <option class="icon" value="pintrest" data-imagesrc="../images/pintrest.png" data-description="Pintrest post"></option>
                        <option class="icon" value="instagram" data-imagesrc="../images/instagram.png" data-description="Instagram post"></option>
                        <option class="icon" value="email" data-imagesrc="../images/email.png" data-description="Email"></option>
                    </select>
                </div>
                <div class="button-container">
                    <button type="submit" class="submit-event" data-role="submit">Submit</button>
                    <button type="reset">Reset</button>
                    <button class="exit-popup" data-popup="close-event-popup"> Close </button>
                </div>
            </div>
        </form>

    </div>





    
</main>

